{
  "name": "cabal-bn-be",
  "version": "1.0.0",
  "description": "Cabal Barefoot Nomad Backend",
  "main": "src/app.js",
  "engines": {
    "yarn": "1.x"
  },
  "scripts": {
    "migrate": "npx sequelize-cli db:migrate",
    "seeding": "npx sequelize-cli db:seed:all",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "migrateDB": "npx sequelize-cli db:migrate:undo:all && npm run migrate && npm run seeding",
    "dev": "nodemon --exec npx babel-node src/app.js",
    "build": "babel src -d build",
    "start": "yarn run build && node ./build/app.js",
    "test": "better-npm-run test",
    "coverage": "better-npm-run cov",
    "prepare": "husky install",
    "format": "pretty-quick",
    "lint": "eslint src/*.js --fix"
  },
  "betterScripts": {
    "test": {
      "command": "nyc --reporter=html --reporter=text mocha --require @babel/register ./tests/* --timeout 1000000 --exit || true",
      "env": {
        "NODE_ENV": "test",
        "PORT": 3000
      }
    },
    "cov": "nyc --reporter=lcov npm test"
  },
  "repository": "git+https://github.com/atlp-rwanda/cabal-bn-be.git",
  "keywords": [],
  "author": "niyonkurueric <niyonkurufamous@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atlp-rwanda/cabal-bn-be/issues"
  },
  "homepage": "https://github.com/atlp-rwanda/cabal-bn-be#readme",
  "devDependencies": {
    "@babel/node": "^7.16.8",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "better-npm-run": "^0.1.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "dotenv": "^16.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "jsdoc": "^3.6.10",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^9.2.1",
    "mongoose": "^6.2.4",
    "nyc": "^15.1.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "sequelize": "^6.17.0",
    "sequelize-cli": "^6.4.1",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
