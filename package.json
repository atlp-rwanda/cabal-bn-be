{
  "name": "cabal-bn-be",
  "version": "1.0.0",
  "description": "Cabal Barefoot Nomad Backend",
  "main": "src/app.js",
  "engines": {
    "yarn": "1.x"
  },
  "scripts": {
    "dev": "better-npm-run dev",
    "build": "babel src -d build",
    "start": "better-npm-run prod",
    "test": "better-npm-run test",
    "coverage": "better-npm-run cov",
    "prepare": "husky install",
    "format": "pretty-quick",
    "lint": "eslint src/*.js --fix",
    "dbmigrate": "npx sequelize-cli db:migrate",
    "seeding": "npx sequelize-cli db:seed:all",
    "migrate:undo": "npx sequelize-cli db:migrate:undo:all",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run dbmigrate",
    "dbmigrate:all": "npx sequelize-cli db:migrate:undo:all && npm run dbmigrate && npm run seeding"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec npx babel-node src/app.js",
      "env": {
        "NODE_ENV": "docker",
        "PORT": 5000
      }
    },
    "test": {
      "command": "yarn run dbmigrate:all && nyc --reporter=text --reporter=lcov mocha --recursive --require @babel/polyfill --require @babel/register ./tests/*.js --timeout 500000000 --exit && yarn run migrate:undo",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      }
    },
    "cov": "yarn run test",
    "prod": {
      "command": "yarn run dbmigrate:all && yarn run build && node ./build/app.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlp-rwanda/cabal-bn-be.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atlp-rwanda/cabal-bn-be/issues"
  },
  "homepage": "https://github.com/atlp-rwanda/cabal-bn-be#readme",
  "devDependencies": {
    "@babel/node": "^7.16.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/register": "^7.17.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2"
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.6.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "better-npm-run": "^0.1.1",
    "cloudinary": "^1.28.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "express-form-data": "^2.0.17",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "passport": "^0.5.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "sequelize": "^6.17.0",
    "sequelize-cli": "^6.4.1",
    "swagger-ui-express": "^4.3.0",
    "uuidv4": "^6.2.12"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
